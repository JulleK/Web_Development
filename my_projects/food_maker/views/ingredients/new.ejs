<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h1>Add An Ingredient</h1>
      <form action="/ingredients" method="POST" class="w-50">
        <div class="form-group mb-2">
          <label for="name">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Ingredient Name"
            required
          />
        </div>
        <div class="form-group mb-2">
          <label for="price">$Price</label>
          <input
            type="number"
            class="form-control"
            id="price"
            name="price"
            placeholder="$0.00"
            step="0.01"
          />
        </div>
        <div class="form-group mb-2">
          <label for="available-count">Available Count</label>
          <input
            id="available-count"
            type="number"
            class="form-control"
            id="available-count"
            placeholder="How many available"
            name="count"
          />
        </div>
        <div class="form-check">
          <label class="form-check-label" for="availability-checkbox"
            >Is Available</label
          >
          <input
            type="checkbox"
            class="form-check-input"
            id="availability-checkbox"
            name="available"
            checked
          />
        </div>
        <button type="submit" class="btn btn-primary">Add Ingredient</button>
      </form>
    </div>
  </body>
</html>

<script>
  const checkbox = document.querySelector("#availability-checkbox");
  const availableInput = document.querySelector("#available-count");

  checkbox.addEventListener("change", () => {
    if (checkbox.checked) {
      availableInput.disabled = false;
    } else {
      availableInput.disabled = true;
      availableInput.value = "";
    }
  });
</script>
